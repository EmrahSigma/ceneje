<div class="container mx-auto my-8 p-6 bg-black text-white rounded-lg shadow-lg">
  <h1 class="text-3xl font-bold text-center mb-6">Contact Support</h1>

  <%= form_with url: contact_support_send_path, method: :post, local: true, class: "max-w-lg mx-auto space-y-4" do |form| %>
    <div>
      <%= form.label :title, "Subject:", class: "block text-lg font-semibold" %>
      <%= form.text_field :title, class: "w-full border border-gray-300 rounded-lg p-2 text-black" %>
    </div>

    <div>
      <%= form.label :description, "Describe your issue:", class: "block text-lg font-semibold" %>
      <%= form.text_area :description, rows: 5, class: "w-full border border-gray-300 rounded-lg p-2 text-black" %>
    </div>

    <%= form.submit "Send Support Request", class: "w-full bg-white text-black font-bold py-2 px-4 rounded shadow-md hover:bg-gray-300" %>
  <% end %>
</div>