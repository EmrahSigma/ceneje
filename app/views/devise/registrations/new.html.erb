<div class="max-w-md mx-auto bg-white shadow-lg rounded-lg p-6 mt-10">
  <h2 class="text-2xl font-bold text-center mb-4">Registracija</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>

    <!-- Display errors -->
    <% if resource.errors.any? %>
      <div class="text-red-500 text-sm">
        <ul>
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :ime, "Ime", class: "block font-semibold mb-1" %>
      <%= f.text_field :ime, class: "w-full p-2 border rounded-lg" %>
    </div>

    <div>
      <%= f.label :priimek, "Priimek", class: "block font-semibold mb-1" %>
      <%= f.text_field :priimek, class: "w-full p-2 border rounded-lg" %>
    </div>

    <div>
      <%= f.label :telefonska_stevilka, "Telefonska Å tevilka", class: "block font-semibold mb-1" %>
      <%= f.text_field :telefonska_stevilka, class: "w-full p-2 border rounded-lg" %>
    </div>

    <div>
      <%= f.label :email, "Email", class: "block font-semibold mb-1" %>
      <%= f.email_field :email, class: "w-full p-2 border rounded-lg" %>
    </div>

    <div>
      <%= f.label :naslov, "Naslov", class: "block font-semibold mb-1" %>
      <%= f.text_field :naslov, class: "w-full p-2 border rounded-lg" %>
    </div>

    <div>
      <%= f.label :mesto, "Mesto", class: "block font-semibold mb-1" %>
      <%= f.text_field :mesto, class: "w-full p-2 border rounded-lg" %>
    </div>

    <div>
      <%= f.label :password, "Geslo", class: "block font-semibold mb-1" %>
      <%= f.password_field :password, class: "w-full p-2 border rounded-lg" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Potrdi Geslo", class: "block font-semibold mb-1" %>
      <%= f.password_field :password_confirmation, class: "w-full p-2 border rounded-lg" %>
    </div>

    <%= f.submit "Registriraj se", class: "w-full bg-blue-500 text-white p-2 rounded-lg hover:bg-blue-700" %>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
