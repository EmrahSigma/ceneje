<div class="max-w-md mx-auto bg-white shadow-lg rounded-lg p-6 mt-10">
  <h2 class="text-2xl font-bold text-center mb-4">Prijava</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, "Email", class: "block font-semibold mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border rounded-lg" %>
    </div>

    <div>
      <%= f.label :password, "Geslo", class: "block font-semibold mb-1" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 border rounded-lg" %>
    </div>

    <div class="flex justify-between items-center">
      <div>
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, "Zapomni si me", class: "text-sm" %>
      </div>
      <%= link_to "Pozabljeno geslo?", new_password_path(resource_name), class: "text-blue-600 hover:underline text-sm" %>
    </div>

    <%= f.submit "Prijavi se", class: "w-full bg-blue-500 text-white p-2 rounded-lg hover:bg-blue-700" %>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "Še nimate računa? Registrirajte se!", new_registration_path(resource_name), class: "text-blue-600 hover:underline" %>
  </div>
</div>
